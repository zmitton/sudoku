- if @string
  #solution_string{:style => "display:none"}= @solution_string
%header
  %h1
    <span>S</span><span>u</span><span>d</span><span>o</span><span>k</span><span>u</span> <span>S</span><span>o</span><span>l</span><span>v</span><span>e</span><span>r</span>
%main
  %section
    #board
      #display
        %table
          - (1..81).each_slice(9) do |row|
            %tr
              - row.each do |i|
                %td.table_cell{:id => "#{i}"}
                  %input{:type => "text", :maxlength => "1", :size => "1"}
      #cover
    #submit
      %button{:onclick => "go();", :type => "button"} Submit!
      %a{:href => "/", :class => "button"} Clear
%footer
